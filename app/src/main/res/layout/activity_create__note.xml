<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_view_create_note"
    android:background="@color/main_color_background"
    tools:context=".Create_Note">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainActionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true"
        android:background="@color/main_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/createNewNote_toolbar"
            android:theme="@style/Theme.AppCompat.Light"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create note"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/create_new_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:textCursorDrawable="@drawable/curosrcolor"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:hint="Title"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold">

        </EditText>


        <EditText
            android:textCursorDrawable="@drawable/curosrcolor"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/content_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:gravity="top|left"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:textColorHint="#5DA3FA"
            android:textSize="18sp">

        </EditText>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>