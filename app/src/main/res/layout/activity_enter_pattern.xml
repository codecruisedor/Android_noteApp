<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    tools:context=".enterPattern">


    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout_enter_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_color_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437">


        <ImageView

            android:id="@+id/pattern_lock_image_enter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/lock_pattern">

        </ImageView>


        <TextView
            android:id="@+id/textview_for_enter_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/catamaran"
            android:text="Enter security code:"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>

        <com.andrognito.patternlockview.PatternLockView
            android:id="@+id/pattern_lock_view_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:aspectRatio="square"
            app:aspectRatioEnabled="true"
            app:correctStateColor="@color/black"
            app:dotAnimationDuration="200"
            app:dotCount="3"
            app:dotNormalSize="10dp"
            app:dotSelectedSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:normalStateColor="@color/black"
            app:pathEndAnimationDuration="100"
            app:pathWidth="4dp"
            app:wrongStateColor="@color/pomegranate" />


        <TextView
            android:id="@+id/forgot_pattern"
            android:textStyle="italic"
            android:textColor="#909090"
            android:text="@string/forgot_pin"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>