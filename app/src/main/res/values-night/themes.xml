<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#778899</item>
        <item name="colorOnPrimary">#778899</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">#778899</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="actionModeStyle">@style/ThemeOverlay.AppCompat.Dark</item>

        <!-- Customize your theme here. -->
    </style>
</resources>